                                                <!--<FontIcon iconLiteral="fas-bolt" />-->
                                            </graphic>
                                        </MenuItem>
                                        <MenuItem fx:id="setupAuxclasspathMenuItem"
                                                  mnemonicParsing="false"
                                                  text="Analysis classpath">
                                            <graphic>
