                                                <!--<FontIcon iconLiteral="fab-java"/>-->
                                            </graphic>
                                        </MenuItem>
                                    </items>
                                </Menu>

                                <Menu text="About">
                                    <items>
                                        <!-- TODO add link to doc pages -->
                                        <!--<MenuItem mnemonicParsing="false" text="About" />-->
